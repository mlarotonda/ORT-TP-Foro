@model Foro_C.Models.Categoria

@{
    ViewData["Title"] = "Details";
}

<div>
    <h3>Categoria: @Html.DisplayFor(model => model.Nombre)</h3>
    <table class="table" style="width: 40%;">
        <thead>
            <tr>
                <th>
                    <h4 class="column-header">Entradas</h4>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Entradas)
            {
                <tr>
                    <td>
                        &nbsp;<a asp-controller="Entradas" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Titulo)</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a class="btn btn-primary" asp-controller="Entradas" asp-action="Create" asp-route-categoriaId="@Model.Id">Crear entrada</a>
    <br />
    <br />
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
    <a class="btn btn-secondary" asp-action="Index">Volver al listado</a>
</div>
