@model IEnumerable<Foro_C.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h1>Categorías</h1>

<table class="table" style="width: 40%;">
    <thead>
        <tr>
            <th>
                <span class="column-header">Nombre</span>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="nombre-columna">
                    <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Nombre)</a>
                </td>
                <td>
                    @if (signInManager.IsSignedIn(User))
                    {
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                        }
                    }

                    <a asp-action="Create" asp-controller="Entradas" asp-route-categoriaId="@item.Id" class="btn btn-primary">Crear entrada</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a class="btn btn-primary" asp-action="Create">Crear</a>
</div>
